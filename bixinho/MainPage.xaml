<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="bixinho.MainPage"             
       Shell.NavBarIsVisible="false">
   
      <Grid>   
             <Grid.RowDefinitions>
                  <RowDefinition Height="200"/>
                  <RowDefinition Height="250"/>
                  <RowDefinition Height="200"/>
                  <RowDefinition Height="*"/>
                  <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

             <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions> 

            <Image 
            x:Name="imagemdopersonagem"
            Aspect="Center" 
            Margin="20, 100, 20, 0"
            Grid.RowSpan="3"
            Grid.ColumnSpan="2"/>
        

                  <Frame x:Name="Barras"
                  Margin= "10, 0, 10, 50"
                  Grid.ColumnSpan="2"
                  HeightRequest="120"
                  Padding="10"
                  CornerRadius="30"
                  Opacity="1"
                  BackgroundColor="#99d0d0d0">
                   
      <Grid>
            <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="50"/>
                  <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                  <RowDefinition Height="*"/>
                  <RowDefinition Height="*"/>
                  <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


                  <ImageButton Source="tristeza.png"
                        Grid.Row = "0"
                        Grid.Column="0"
                        Aspect="AspectFill"
                         CornerRadius="30"/>

                  <ImageButton Source="confusao.png"                    
                        Grid.Row = "1"
                        Grid.Column="0"
                        Aspect="AspectFill"
                        CornerRadius="30"/>

                  <ImageButton Source="fome.png" 
                        Grid.Row = "2"
                        Grid.Column="0"
                        Aspect="AspectFill"
                        CornerRadius="30"/>
                  
                  <ProgressBar 
                        x:Name="Progressotristeza"
                        Grid.Row = "0"
                        Grid.Column="1"/>

                  <ProgressBar 
                        x:Name="Progressoconfusao"
                        Grid.Row = "1"
                        Grid.Column="1"/>
                  
                  <ProgressBar 
                        x:Name="Progressofome"
                        Grid.Row = "2"
                        Grid.Column="1"/>
              </Grid>    
          </Frame>


          <Frame x:Name="Escolhas"
                  VerticalOptions="End"
                  Grid.ColumnSpan="2"
                  Grid.Row="4"
                  HeightRequest="120"
                  Padding="10"
                  CornerRadius="30"
                  Opacity="1"
                  BackgroundColor="#99d0d0d0">
                   
      <Grid>
            <Grid.ColumnDefinitions>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="*"/>
                  <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                  <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <ImageButton Source="tristeza.png"
                  Clicked="ProgressoTristeza"
                  Grid.Row = "0"
                  Grid.Column="0"
                  Aspect="AspectFill"
                  CornerRadius="30"/>

            <ImageButton Source="confusao.png"
                  Clicked="ProgressoConfusao"
                  Grid.Row = "0"
                  Grid.Column="1"
                  Aspect="AspectFill"
                  CornerRadius="30"/>

            <ImageButton Source="fome.png"
                  Clicked="ProgressoFome"
                  Grid.Row = "0"
                  Grid.Column="2"
                  Aspect="AspectFill"
                  CornerRadius="30"/>

             <ImageButton Source="seta.png"
                  Clicked="TrocaBixos"
                  Grid.Row = "0"
                  Grid.Column="3"
                  Aspect="AspectFill"
                  CornerRadius="30"/>


                  </Grid>    
          </Frame>
     </Grid>
 </ContentPage>

